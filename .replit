modules = ["nodejs-20", "web"]
run = "npm run dev"

[nix]
channel = "stable-24_05"

[deployment]
run = ["sh", "-c", "npx serve -s dist -p 5000"]
build = ["sh", "-c", "npm run build"]

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 5000
externalPort = 5000

[[ports]]
localPort = 8080
externalPort = 80

[[ports]]
localPort = 8081
externalPort = 8081

[[ports]]
localPort = 8082
externalPort = 3000

[workflows]
runButton = "Run Dev Server (Port 8080)"

[[workflows.workflow]]
name = "Run Dev Server"
author = 42062761
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 npm run dev -- --host 0.0.0.0"

[[workflows.workflow]]
name = "Run Dev Server (Port 3002)"
author = 42062761
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=3002 npm run dev"

[[workflows.workflow]]
name = "Run Dev Server (Port 5000)"
author = 42062761
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "PORT=5000 npm run dev -- --host 0.0.0.0"

[[workflows.workflow]]
name = "Run Dev Server (Port 8080)"
author = 42062761
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev -- --host 0.0.0.0 --port 8080"
